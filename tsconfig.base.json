{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@bandmember/api-interfaces": ["libs/api-interfaces/src/index.ts"],
      "@bandmember/bandmember/feature-shell": [
        "libs/bandmember/feature-shell/src/index.ts"
      ],
      "@bandmember/shared/environments": [
        "libs/shared/environments/src/index.ts"
      ],
      "@bandmember/shared/styles": ["libs/shared/styles/src/index.ts"],
      "@bandmember/shared/ui-footer": ["libs/shared/ui-footer/src/index.ts"],
      "@bandmember/shared/ui-layout": ["libs/shared/ui-layout/src/index.ts"],
      "@bandmember/shared/ui-main": ["libs/shared/ui-main/src/index.ts"],
      "@bandmember/shared/ui-toolbar": ["libs/shared/ui-toolbar/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
